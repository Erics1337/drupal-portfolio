{#
/**
 * @file
 * Theme override to display a view of unformatted rows.
 *
 * Available variables:
 * - title: The title of this group of rows. May be empty.
 * - rows: A list of the view's row items.
 *   - attributes: The row's HTML attributes.
 *   - content: The row's content.
 * - view: The view object.
 * - default_row_class: A flag indicating whether default classes should be
 *   used on rows.
 *
 * @see template_preprocess_views_view_unformatted()
 */
#}

<div id="homeblog" class="bd-blog__area section-space">
	<div class="container">
		<div class="row align-items-center justify-content-center">
			<div class="col-xl-5 col-lg-7 col-md-8 col-sm-10">
				<div class="section__title-wrapper text-center section__title-space">
					<h2 class="section__title mb-20">Read My Latest Blog</h2>
				</div>
			</div>
		</div>
		<div class="row g-5">
			{% for row in rows %}
				<div class="col-xl-4 col-lg-6 col-md-6 wow fadeInUp" data-wow-delay=".3s" data-wow-duration="1s">
					<section class="blog__wrap blog__item style-two">
						<div class="blog__thumb">
							<a href="blog-details.html">
								<img src="{{file_url(row.content['#row']._entity.field_image.entity.fileuri)}}" alt="image not found">
							</a>
							<div class="blog__btn-circle">
								<a href="#" class="circle-btn is-bg-white">
									<span class="icon__box">
										<i class="fa-regular fa-arrow-right-long"></i>
									</span>
								</a>
							</div>
						</div>
						<div class="blog__content">
							<div class="blog__content-top">
								<div class="blog__tag is-bg-light">
									<a href="blog-details.html">{{ row.content['#row']._entity.field_category.0.entity.name.value }}</a>
								</div>
								<div class="blog__meta">
									<span>
										<i class="fa-light fa-calendar"></i>
										{{ row.content['#row']._entity.created[0].value |date('F d, Y') }}
									</span>
								</div>
							</div>
							<h5 class="blog__title">
								<a href="#">{{ row.content['#row']._entity.title[0].value }}</a>
							</h5>
							<div class="blog__content-bottom">
								<div class="blog__author">
									<div class="blog__author-info">
										<span class="blog__author-designation">By
											{{ row.content['#row']._relationship_entities.uid.field_name.value }}</span>
									</div>
								</div>
							</div>
						</div>
					</section>
				</div>
			{% endfor %}
		</div>
	</div>
</div>
<div class="section__divider">
	<hr>
</div>
