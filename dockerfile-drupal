# Use the official Drupal image as a base
FROM drupal:10-apache

# Enable Apache rewrite and SSL modules for clean URLs and HTTPS support
RUN a2enmod rewrite ssl

# Install Certbot for SSL certificate management
RUN apt-get update && apt-get install -y certbot python3-certbot-apache

# Install Drush globally
RUN composer global require drush/drush && \
    ln -s /root/.composer/vendor/bin/drush /usr/local/bin/drush
    
# Update the Apache configuration file to point to the Drupal web root
RUN sed -i 's|DocumentRoot /var/www/html|DocumentRoot /var/www/html/web|' /etc/apache2/sites-available/000-default.conf && \
    sed -i '/<Directory \/var\/www\/>/,/<\/Directory>/ s/AllowOverride None/AllowOverride All/' /etc/apache2/apache2.conf && \
    sed -i '/<\/VirtualHost>/i \n\
        SSLEngine on\n\
        SSLCertificateFile /etc/letsencrypt/live/ericsdrupalportfolio.com/fullchain.pem\n\
        SSLCertificateKeyFile /etc/letsencrypt/live/ericsdrupalportfolio.com/privkey.pem\n' /etc/apache2/sites-available/000-default.conf

# Set the working directory to the project root (where composer.json is located)
WORKDIR /var/www/html

# Copy the entire project to the container
COPY . /var/www/html

# Ensure the directory has the correct permissions
RUN chown -R www-data:www-data /var/www/html && \
    find /var/www/html -type d -exec chmod 755 {} \; && \
    find /var/www/html -type f -exec chmod 644 {} \;

# Install Composer dependencies, including Drupal core
RUN composer install

# Restart Apache service
CMD ["apache2-foreground"]
